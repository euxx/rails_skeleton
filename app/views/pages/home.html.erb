<div class="container d-flex flex-column align-items-center">
  <h1>Check List</h1>

  <div>
    <h5>Make sure everything is right</h5>
    <ul>
      <li>esbuild</li>

      <li>
        Stimulus
        <ul>
          <li data-controller="hello">
            Greet: <span data-hello-target="output"></span>
          </li>
        </ul>
      </li>

      <li class="text-primary">Bootstrap</li>
      <li>Bootstrap Form</li>

      <li>
        <%= tag.span 'Popover', class: 'pe-2',
          data: { 'bs-toggle': 'popover',
                  'bs-trigger': 'hover click',
                  'bs-placement': 'right',
                  'bs-content': "I'm OK" } %>
      </li>

      <li>
        FontAwesome
        <%= icon('fab', 'font-awesome-flag', class: 'text-secondary') %>
      </li>
    </ul>

    <div class="mb-3">
      <% if params[:name].present? %>
        Hi,
        <span class="font-weight-bold">
          <%= params[:name].split('@').first %>
        </span>
      <% else %>
        <%= bootstrap_form_tag url: '/', method: :get, layout: :inline do |f| %>
          <div class="d-flex">
            <%= f.text_field :name, hide_label: true, placeholder: 'Name' %>
            <%= f.submit 'Greet', class: 'btn btn-success ms-2' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="text-center">
    <%= link_to 'https://github.com/euxx/rails_skeleton', title: 'Rails Skeleton' do %>
    <%= icon('fab', 'github') %>
    <% end %>
  </div>
</div>
